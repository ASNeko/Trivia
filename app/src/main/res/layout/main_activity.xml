<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.testrun.MainActivity">

    <Button
            android:text="2005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choiceC"
            android:layout_alignBaseline="@+id/choiceD"
            android:layout_alignBottom="@+id/choiceD"
            android:layout_alignStart="@+id/choiceA" />

    <Button
            android:text="2006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choiceD"
            android:layout_marginBottom="66dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/choiceB" />

    <TextView
            android:text="When was Team 1676 founded?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="95dp"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/question"
            android:layout_above="@+id/choiceB"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    <Button
            android:text="2004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choiceB"
            android:layout_alignBaseline="@+id/choiceA"
            android:layout_alignBottom="@+id/choiceA"
            android:layout_alignParentEnd="true" />

    <Button
            android:text="2003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choiceA"
            android:layout_marginBottom="63dp"
            android:layout_above="@+id/choiceC"
            android:layout_alignParentStart="true" />

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/progress"
            android:layout_alignParentEnd="true" />

    <TextView
            android:text="1/20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/question"
            android:layout_centerHorizontal="true"
            android:id="@+id/questionNumber" />

</RelativeLayout>